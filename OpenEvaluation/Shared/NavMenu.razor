<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Open Evaluation System</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView Roles="Teacher">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="groups">
                        <span class="oi oi-grid-three-up" aria-hidden="true"></span> Group
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="homeworks">
                        <span class="oi oi-document" aria-hidden="true"></span> Homework
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Student">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="group">
                        <span class="oi oi-grid-three-up" aria-hidden="true"></span> Group
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="homework">
                        <span class="oi oi-document" aria-hidden="true"></span> Homework
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
